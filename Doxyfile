# Impacts the relational graphs (class relationships, inheritance, etc.)
TEMPLATE_RELATIONS     = YES
DOT_MULTI_TARGETS      = YES

INCLUDE_GRAPH          = YES
INCLUDED_BY_GRAPH      = YES
CLASS_GRAPH            = YES
GROUP_GRAPHS           = YES

# Optional Formatting options for graph font/style (you may tweak as needed)
DOT_GRAPH_MAX_NODES    = 50
